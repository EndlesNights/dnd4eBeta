<div id="death-save" class="dialogue-content" onsubmit="event.preventDefault();">
	
	<div class="form-title">
		<h1 class="form-title">{{localize 'DND4E.DeathSave'}}</h1>
		<p>{{localize 'DND4E.DeathSaveTip'}}</p>
		
		<fieldset>
			<div class="form-group">
				<label>{{localize 'DND4E.RollSituationalBonus'}}</label>
				<input type="text" name="save" value="" placeholder=""/>
			</div>

			<div class="form-group">
				<label>{{ localize "DND4E.RollMode" }}</label>
				<select name="rollMode">
					{{selectOptions rollModes selected=rollMode localize=true}}
				</select>
			</div>
		</fieldset>
	</div>
	
</div>
