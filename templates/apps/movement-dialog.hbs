<div id="movement-dialog" class="dialog-content" onsubmit="event.preventDefault();">

	<div class="form-group base" data-movement="base">
		<span class="move-value"><strong>{{system.movement.base.value}} {{localize 'DND4E.MovementUnit'}}</strong> {{localize 'DND4E.MovementSpeedBase'}}:</span>
		<input type="text" name="system.movement.base.base" value="{{system.movement.base.base}}" data-tooltip="{{localize 'DND4E.MovementSpeedBase'}}" data-dtype="Number" onClick="this.select();" placeholder="0"/>
		<a class="move-bonus" data-action="movementBonusClicked" data-target="system.details" data-tooltip="{{localize 'DND4E.MovementSpeedBase'}} {{localize 'DND4E.Bonus'}}">{{localize 'DND4E.Bonus'}}: {{system.movement.base.bonusValue}}</a>
		<span class="temp-label">{{localize 'DND4E.Temp'}}:</span>
		<input class="temp-value" type="text" name="system.movement.base.temp" value="{{system.movement.base.temp}}" data-tooltip="{{localize 'DND4E.MovementSpeedBase'}}" data-dtype="Number" onClick="this.select();" placeholder="0"/>
	</div>
	<footer class="flexrow">
		<span>{{localize 'DND4E.Armour'}} {{localize 'DND4E.ArmourMovePenelty'}}: {{system.movement.base.armour}}</span>
	</footer>

	<div class="form-group base" data-movement="walk">
