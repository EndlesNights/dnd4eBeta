<div id="custom-roll-descriptions" class="dialogue-content" onsubmit="event.preventDefault();">

	<h1 class="form-title">{{localize 'DND4EUI.CustomizeRollDescriptions'}}</h1>
	<p>{{localize 'DND4EUI.CustomizeRollDescriptionsTip'}}</p>

	{{!-- Ability --}}
	<fieldset>
		<legend>{{localize 'DND4E.Ability'}} {{localize 'DND4E.CheckPlural'}}</legend>
		{{#each system.abilities as |ability a|}}
		<div class="ability">
			<span>{{ability.label}}</span>
			<input class="stat-chat" name="system.abilities.{{a}}.chat" type="text" value="{{ability.chat}}" onClick="this.select();"/>
		</div>
		{{/each}}
	</fieldset>

	{{!-- Skills --}}
	<fieldset>
		<legend>{{localize 'DND4E.Skill'}} {{localize 'DND4E.CheckPlural'}}</legend>
		{{#each system.skills as |skills s|}}
		<div class="skill">
			<span>{{skills.label}}</span>
			<input class="stat-chat" name="system.skills.{{s}}.chat" type="text" value="{{skills.chat}}" onClick="this.select();"/>
		</div>
		{{/each}}
	</fieldset>

	{{!-- Defences --}}
	<fieldset>
		<legend>{{localize 'DND4E.Defence'}} {{localize 'DND4E.CheckPlural'}}</legend>
		{{#each system.defences as |defences d|}}
		<div class="defence">
			<span>{{defences.label}}</span>
			<input class="stat-chat" name="system.defences.{{d}}.chat" type="text" value="{{defences.chat}}" onClick="this.select();"/>
		</div>
		{{/each}}
	</fieldset>
	
</div>