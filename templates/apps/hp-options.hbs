<div class="hitpoint-config" autocomplete="off" onsubmit="event.preventDefault();">
	<fieldset>
		<div>
			<input type="checkbox" name="system.attributes.hp.autototal" data-dtype="Boolean" {{checked system.attributes.hp.autototal}} data-tooltip="{{localize 'DND4E.HPAuto'}}"/>
			<span>{{localize 'DND4E.HPAuto'}}</span>
		</div>
		<div>
			<input class="hp-starting" type="text" name="system.attributes.hp.starting" value="{{system.attributes.hp.starting}}" data-tooltip="{{localize 'DND4E.HPBase'}}"  placeholder="0" data-dtype="Number" onClick="this.select();" />
			<span class="hp-con" data-tooltip="{{localize 'DND4E.AbilityCon'}} {{localize 'DND4E.Score'}}">+ {{system.abilities.con.value}}</span>
			<span>{{localize 'DND4E.HPFirst'}}</span>
		</div>
		<div>
			<input class="hp-perlevel" type="text" name="system.attributes.hp.perlevel" value="{{system.attributes.hp.perlevel}}" data-tooltip="{{localize 'DND4E.HPPer'}}"  placeholder="0" data-dtype="Number" onClick="this.select();" />
			<span>{{localize 'DND4E.HPPer'}}</span>
		</div>
		<div>
			<input class="hp-misc" type="text" name="system.attributes.hp.misc" value="{{system.attributes.hp.misc}}" data-tooltip="{{localize 'DND4E.HPBonus'}}"  placeholder="0" data-dtype="Number" onClick="this.select();" />
			<span>{{localize 'DND4E.HPBonus'}}</span>
		</div>
		
		<div>
			<input type="checkbox" name="system.attributes.hp.temprest" data-dtype="Boolean" {{checked system.attributes.hp.temprest}} data-tooltip="{{localize 'DND4E.HPTempKeep'}}"/>
			<span>{{localize 'DND4E.HPTempKeep'}}?</span>
		</div>
	</fieldset>
</div>